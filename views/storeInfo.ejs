<!-- local css -->
<link rel="stylesheet" type="text/css" href="../css/storeInfo.css">

<div class="add-store-info">
<% if(info.length!=0) { %>
    <div style="display: flex; justify-content: space-between;">
    <h3>Store Details</h3>
    <a href="/" >Home</a>
    </div>
    <div class="store-details">
      <p>Address: <%= info[0].address %></p>
      <p>GST: <%= info[0].gst %></p>
      <p>Phone Number: <%= info[0].phone %></p>
      <% if (info[0].website) { %>
        <p>Website: <%= info[0].website %></p>
      <% } %>
      <p>Category: <%= info[0].category %></p>
    </div>
<% } else { %>
      <div style="display: flex; justify-content: space-between;">
    <h3>Add Store Details</h3>
    <a href="/" >Home</a>
    </div>
    <!-- Store Info Form -->
    <form action="/users/addStoreInfo" method="POST" class="store-info">
    <label>Address:</label>
    <input type="text" name="address" placeholder="Enter address" required>
    <label>GST:</label>
    <input type="text" name="gst" placeholder="Enter GST" required>
    <label>Phone Number:</label>
    <input type="tel" name="phone" placeholder="Phone Number" required>
    <label>Website:</label>
    <input type="url" name="website" placeholder="Website URL">
    <label>Category:</label>
    <select name="category" required>
        <option value="" disabled selected>Select Category</option>
        <option value="Fashion">Fashion</option>
        <option value="Sports">Sports</option>
        <option value="Lifestyle">Lifestyle</option>
        <option value="Others">Others</option>
    </select><br>
    <button type="submit">Save</button>
    <button type="reset" style="background-color: red;">Reset</button>
    </form>
<% } %>
</div>